<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>https://splunk-url:8088/services/collector/event/1.0</url> <!-- Replace with your actual Splunk HEC URL -->
        <token>your-splunk-token</token> <!-- Replace with your Splunk token -->
    </appender>

    <!-- Root logger set to send logs to Splunk at INFO level -->
    <root level="info">
        <appender-ref ref="SPLUNK"/>
    </root>
</configuration>
